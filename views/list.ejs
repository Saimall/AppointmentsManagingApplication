<<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <link href="./css/style.css" rel="stylesheet" />
    <title>Appointment Management application</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/style.css" rel="stylesheet" />
    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
    const deleteevent = (id) => {
        fetch(`/lists/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.erroe(err));
      }
    </script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %> 
        <a href="/signout" > Signout</a>
        <form action="/lists" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="flex gap-4 py-4 ">
            <div class="flex-auto">
              <input
                type="text"
                name="title"
                placeholder="Event name"
                class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm"
              />
            </div>
            <div class="flex-auto">
              <input
                type="time"
                name="starttime"
                placeholder="Starting time"
                class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4"
              />
            </div>
            <div class="flex-auto">
                <input
                  type="time"
                  name="endtime"
                  placeholder="ending time"
                  class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4"
                />
              </div>
            <div class="flex-none">
              <button
                type="submit"
                class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <%- include('lists.ejs', { data: allevents}) %> 
        <% if(messages && messages.error && messages.error.length > 0)  { %>
          <% for(var i=0; i<messages.error.length; i++) { %>
               <div class="bg-red-300 text-red-900 p-2 rounded-lg shadow">
                  <li> <%= messages.error[i] %></li>
               </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </body>
</html>